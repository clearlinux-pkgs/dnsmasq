diff --git a/contrib/dnslist/dnslist.pl b/contrib/dnslist/dnslist.pl
index 7ce2720b560f..a43b95482745 100755
--- a/contrib/dnslist/dnslist.pl
+++ b/contrib/dnslist/dnslist.pl
@@ -44,7 +44,7 @@ use Template;
 
